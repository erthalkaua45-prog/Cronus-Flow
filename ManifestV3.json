{
  "manifest_version": 3,
  "name": "Cronus Flow",
  "description": "Mentor de vendas em tempo real para WhatsApp Web",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_title": "Abrir Cronus Flow"
  },
  "background": {
    "service_worker": "background.js"
  }
}
