{
  "manifest_version": 3,
  "name": "Cronus Flow",
  "version": "0.1.0",
  "description": "Mentor de vendas em tempo real para WhatsApp Web",
  "permissions": ["sidePanel"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Abrir Cronus Flow"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  }
}